<MudButton Variant="Variant.Text" OnClick="@(() => OpenDrawer(Anchor.Start))">Shop Name</MudButton>

<MudDrawer @bind-Open="@open" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6"><MudIcon Icon="@Icons.Material.Filled.ShoppingCart"/> Shop Name</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Match="NavLinkMatch.All" Href="">
            <MudIcon Icon="@Icons.Material.Filled.Home" />Home
        </MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Href="products">
            Products
        </MudNavLink>

        @foreach (Category category in CategoryService.Categories)
        {
            <div>
                <MudNavLink class="nav-link" href="@category.Url" Match="NavLinkMatch.All">
                    <span aria-hidden="true"></span> @category.Name
                </MudNavLink>
            </div>
        }
    </MudNavMenu>
</MudDrawer>
