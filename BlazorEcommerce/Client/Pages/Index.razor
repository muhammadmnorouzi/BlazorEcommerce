@page "/"
@page "/search/{searchText}/{page:int}"
@page "/{categoryUrl}"
@using BlazorEcommerce.Client.Pages.Products

<PageTitle>Shop Name</PageTitle>

@if (SearchText == null && CategoryUrl == null)
{
    <FeaturedProducts />
}
else
{
    <ProductList />

    @if (@ProductService.SearchPaginationHeader != null)
    {
        <MudPagination Rectangular="true" Variant="Variant.Outlined" Color="Color.Primary"
    Count="@ProductService.SearchPaginationHeader.TotalPages" SelectedChanged="PageChanged" />

        <MudText Align="Align.Center">Page: @Page</MudText>
    }
}
