<MudCard>
    <MudCardMedia Image="@Product.ImageUrl" Height="400" />
    <MudCardContent>
        <MudText Typo="Typo.h5">@Product.Title</MudText>
        <MudText Typo="Typo.body2">@Product.Description</MudText>
        <MudText Typo="Typo.body2" Color="Color.Success">@string.Format("{0:C}" , Product.Price)</MudText>
    </MudCardContent>
</MudCard>